<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dialog -->
    <style name="BottomSlideDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/VerticalSlideAnimation</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="DialogNoTransition">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="VerticalSlideAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>
</resources>